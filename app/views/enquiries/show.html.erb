<h1>Your enquiry</h1>
<div id="enquiry-info">
  <p><%= @enquiry.title %></p>
  <p><%= @enquiry.description %></p>
  <p>I'm only interested in local accountants: <%= @enquiry.is_local ? "Yes" : "No" %></p>
  <ul>
    <% @enquiry.services.each do |service| %>
      <li><%= service.name %></li>
    <% end %>
  </ul>
  <%= link_to enquiry_path(@enquiry), method: :delete do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
</div>

<i class="fas fa-pencil-alt" id="edit-pencil"></i>

<div class="hidden" id="edit-enquiry">
  <%= simple_form_for @enquiry do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :is_local, label: "I'm only intereseted in local accountants" %>
    <%= f.input :services, as: :check_boxes, collection: SERVICES %>
    <%= f.submit "Update" %>
  <% end %>
  <button id="cancel-edit">Cancel</button>
</div>

