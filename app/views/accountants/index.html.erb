<div class="grey-wrapper">
  <div class="container">
    <div class="white-card">
      <h1>Find your accountant</h1>
    </div>

    <%= simple_form_for Accountant.new, url: accountants_path, method: :get do |f| %>
    <div>
      <%= f.input :services, collection: Service.all, input_html: { class: 'select2', multiple: "multiple" } %>
      <%= text_field_tag :search, params[:search] %>
      <%= f.button :submit, 'Search', class: "btn-primary mx-sm-2" %>
    </div>
    <% end %>
  </div>

  <% @accountants.each do |accountant| %>
    <%= render 'accountant_card', accountant: accountant %>
  <% end %>
</div>

<div class="text-center">
  <%= will_paginate @accountants, renderer: BootstrapPagination::Rails %>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
  $(document).ready(function() { $(".select2").select2({theme: "bootstrap"}); });
</script>
